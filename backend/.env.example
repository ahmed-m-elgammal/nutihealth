# Backend-only secrets (never expose in Expo public env vars)
PORT=3000
NODE_ENV=development

# Required API secrets
GROQ_API_KEY=replace_with_groq_key
HF_API_TOKEN=replace_with_huggingface_token
OPENWEATHER_API_KEY=replace_with_openweather_key

# Shared app proxy key required by backend API routes in production
APP_API_KEY=replace_with_long_random_proxy_key

# Optional security configuration
# Comma-separated list of browser origins allowed by CORS
# Example: CORS_ALLOWED_ORIGINS=http://localhost:19006,http://localhost:3000
CORS_ALLOWED_ORIGINS=

# Optional rate limits
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AI_RATE_LIMIT_WINDOW_MS=600000
AI_RATE_LIMIT_MAX=20
RECIPE_RATE_LIMIT_WINDOW_MS=900000
RECIPE_RATE_LIMIT_MAX=30
